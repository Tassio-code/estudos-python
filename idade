idade_anos=int(input("Digite a idade da pessoa em anos: "))

dias =idade_anos*365
horas=dias*24

minutos=horas*60

segundos=minutos*60

print("A idade da pessoa Ã©", idade_anos,"anos, que corresponde a aproximadamente:")
print(dias,"Dias,")
print(horas,"Horas,")
print(minutos,"minutos,")
print(segundos,"segundos.")
